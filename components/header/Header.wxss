/* components/header/Header.wxss */
@import '/app.wxss';

.header-con {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 750rpx;
  height: 100rpx;
  background: #fff;
  border-top: 1rpx solid #f3f3f3;
  border-bottom: 1rpx solid #f3f3f3;
}

.time {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 30rpx;
}

.day {
  margin-left: 3rpx;
}

.cul {
  width: 2rpx;
  height: 40rpx;
  margin: 0 15rpx;
  background: #000;
}

.year-month {
  display: flex;
  flex-direction: column;
}

.like-share {
  position: relative;
  margin-right: 30rpx;
  width: 140rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.like {
  width: 32rpx;
  height: 28rpx;
}

.like-num{
  position: absolute;
  top: -10rpx;
  left: 33rpx;
}

.share {
  height: 28rpx;
  width: 28rpx;
}
